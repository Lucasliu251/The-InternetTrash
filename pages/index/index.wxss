/* 卡片样式 */
.container {
    display: flex;
    justify-content: center;
    padding: 20px;
  }
  
  .card {
    width: 90%;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    overflow: hidden;
  }
  
  /* 头图样式 */
  .profile-header {
    width: 100%;
    height: 150px;
    background-color: #f5f5f5;
  }
  
  /* 个人信息 */
  .profile-info {
    display: flex;
    padding: 15px;
  }
  
  /* 头像样式 */
  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-right: 15px;
  }
  
  /* 用户详情 */
  .user-details {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .nickname, .steamid {
    font-size: 16px;
    color: #333;
    margin-bottom: 5px;
  }